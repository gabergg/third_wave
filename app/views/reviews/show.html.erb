<% provide(:title, @review.bean.name) %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p>Bean: <%= link_to @review.bean.name, @review.bean %></p>
    </div>

    <div class="col-md-6">
      <ul>
        <li>Roaster: <%= link_to @review.bean.roaster.name, @review.bean.roaster %></li>
        <li>Origin: <%= @review.bean.origin %></li>
        <li>Rating: <%= @review.rating %></li>
        <li>Description: <%= @review.description %></li>
        <li>Submitted by: <%= link_to @review.user.name, @review.user %></li>
      </ul>
    </div>
  </div>
</div>