<div class="row text-center">
  <%= render 'shared/search_bar' %>
</div>
<br><br>

<% if signed_in? %>
    <% provide(:title, "My dashboard") %>
    <div class="row">
      <aside class="col-md-4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3>My Reviews</h3>
        <%= render 'shared/user_reviews' %>
      </div>
    </div>
<% else %>
    <div class="row">
      <div class="text-center">
        <h1>Welcome to Third Wave!</h1>
        <h2>
          Third Wave is a coffee yumyum by Gabe and Jenn.
        </h2>

        <%= link_to "Sign up now!", signup_path,
                    class: "btn btn-large btn-primary" %>
      </div>
    </div>
<% end %>