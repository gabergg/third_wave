<li id="<%= item.id %>">
  <span class="content"><%= link_to item.bean.name, item.bean %> <%= item.rating %> <%= item.brew_method %> <%= item.description %>
    <% if current_user == @user %>
      <%= link_to "Edit", edit_review_path(item.id) %>
      <%= link_to "Remove", item, method: :delete, data: {confirm: "Remove this review?"} %>
    <% end %>
  </span>
</li>