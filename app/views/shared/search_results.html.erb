<% if @roasters.empty? && @beans.empty? && @users.empty? %>
    <h1>No Search Results</h1>
<% else %>
    <h1>Search Results:</h1>
<% end %>

<% if @roasters.any? %>
    <h2> Roasters </h2>
    <% @roasters.each do |roaster| %>
        <p><%= link_to roaster.name, roaster %></p>
    <% end %>
    <br>
<% end %>

<% if @beans.any? %>
    <h2> Beans </h2>
    <% @beans.each do |bean| %>
        <p><%= link_to bean.name, bean %></p>
    <% end %>
    <br>
<% end %>

<% if @users.any? %>
    <h2> Users </h2>
    <% @users.each do |user| %>
        <p><%= link_to user.name, user %></p>
    <% end %>
    <br>
<% end %>