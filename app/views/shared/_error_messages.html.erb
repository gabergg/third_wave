<% if object.errors.any? %>
    <div class="error-box">
      Oops! The form contains <%= pluralize(object.errors.count, "error") %>.
      <ul>
        <% object.errors.full_messages.each do |msg| %>
            <li style="color: red"> *<%= msg %></li>
        <% end %>
      </ul>
      <br>
    </div>
<% end %>