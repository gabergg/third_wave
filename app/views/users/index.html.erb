<% provide(:title, 'Users') %>
<div class="row text-center">
  <h1 class="page_header">Users</h1>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% @users.each do |user| %>
        <div class="card">
          <div class="row">
            <div class="col-md-3">
              <%= image_tag "placeholder.png" %>
            </div>

            <div class="col-md-3">
              <span class="card-element"><%= link_to user.name, user %></span>
            </div>

            <div class="col-md-6">
              <span class="card-element">Number of Reviews: &nbsp;&nbsp;&nbsp;<%= user.reviews.count %></span>
            </div>
          </div>
        </div>
    <% end %>
    <!-- Let's have a list of users, sorted desc by number of reviews -->
  </div>
</div>