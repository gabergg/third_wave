<% provide(:title, @roaster.name) %>
<div class="row text-center">
  <h1 class="page_header"><%= @roaster.name %></h1>
</div>

<% if @beans.any? %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <% @beans.each do |bean| %>
            <div class="card">
              <div class="row">
                <div class="col-md-3">
                  <%= image_tag "placeholder.png" %>
                </div>
                <div class="col-md-3">
                  <ul>
                    <li><span class="card-element"><%= link_to bean.name, bean %></span></li>
                    <li><span class="card-element">
                <% if signed_in? %>
                    <%= link_to "Rate Bean", new_review_path(bean_id: bean.id) %>
                <% end %>
                      <br>
                      <% if current_user && current_user.admin? %>
                    <%= link_to "Remove Bean", bean, method: :delete, data: {confirm: "Are you sure?"} %>
                <% end %>
              </span></li>
                  </ul>
                </div>
                <div class="col-md-6">
                  <span class="card-element">Roast:&nbsp;&nbsp;&nbsp;<%= bean.roast %></span><br>
                  <span class="card-element">Origin:&nbsp;&nbsp;&nbsp;<%= bean.origin %></span><br>
                  <span class="card-element">Rating:&nbsp;&nbsp;&nbsp;<%= bean.avg_rating != "None" ? bean.avg_rating.round(2) : "None" %></span><br>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>

    <div class="row text-center">
      <%= will_paginate @beans %>
    </div>

<% else %>

    <div class="row text-center">
      <span><%= @roaster.name %> has no beans yet. Add a bean:</span>
    </div>

<% end %>